<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:tag="tablet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:name="com.agenda.omarche.agenda.CrearContactoFragment"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_crear_contacto" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.agenda.omarche.agenda.ListaContactosFragment"
        android:id="@+id/fragment2"
        tools:layout="@layout/fragment_lista_contactos"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/fragment" />
</RelativeLayout>